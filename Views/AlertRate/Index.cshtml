@model CRM_CSharp.Models.AlertRate.AlertRate

@{
    ViewData["Title"] = "Gestion du Taux d'Alerte";
}

<div class="container">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Update" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="AlertRateId" />
                
                <div class="form-group mb-3">
                    <label asp-for="Rate" class="control-label">Taux d'alerte</label>
                    <input asp-for="Rate" class="form-control" type="number" step="0.01" min="0" max="1" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                    <small class="form-text text-muted">Entrez une valeur entre 0 et 1 (ex: 0.2 pour 20%)</small>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}